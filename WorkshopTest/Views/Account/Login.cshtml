@model LoginViewModel;
@{
    Layout = null;
}
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - WorkshopTest</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/login-style.css" />
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                <div class="card card-signin my-5">
                    <div class="card-body">
                        <h5 class="card-title text-center">Sign In</h5>
                        <form asp-action="Login" asp-controller="Account" method="post" class="form-signin">
                            <div class="form-label-group">
                                <input asp-for="Username" type="text" class="form-control" placeholder="Username" autocomplete="off" autofocus>
                                <label asp-for="Username">Username</label>
                            </div>

                            <div class="form-label-group">
                                <input asp-for="Password" type="password" class="form-control" placeholder="Password">
                                <label asp-for="Password">Password</label>
                            </div>
                            <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Sign in</button>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/js/jQuery-Bundle.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>